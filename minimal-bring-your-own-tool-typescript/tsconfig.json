{
  "include": [
    "./srv/**/*",
    "./tests/**/*"
  ],
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "ES2021"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": [
      "node",
      "jest"
    ],
    "outDir": "./gen/srv",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "ts-node": {
    "files": true
  },
  "exclude": [
    "node_modules"
  ]
}
